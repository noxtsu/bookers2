
<div class="container px-5 px-sm-0">
            <% if @book_new.errors.any? %>
          <%= @book_new.errors.count %> error prohibited this obj from being saved:
          <ul>
            <% @book_new.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/sidebar', books: @books %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg" %></td>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>


