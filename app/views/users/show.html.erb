<div class="container px-5 px-sm-0">
  <div class"row">
    <div class="col-md-3">
      <h2>Users info</h2>
      <img class="attachment user profile_image fallback" src="/app/assets/images/no_image.jpg">
      <table class="table table-striped">
        <tr>
          <td>name</td>
          <td></td>
        </tr>
        <tr>
          <td>introduction</td>
        
        </tr>
      </table>
      <a class="btn btn-outline-secondary btn-sm btn-block mb-3" href="/users/:id/edit">
        <i class="fas fa-user-cog"></i>
      </a>
      <h2>New book</h2>
      <%= form_with model: @book_new, local:true do |f| %>
        <label for="book_title">title</label>
        <%= f.text_field :title %>
        <label for="book_body">Opinion</label>
        <%= f.text_area :body %>
        
 　　　　　<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <% end %>
    </div>
  </div>
</div>