  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
<body>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>Users info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %>
      <table class="table table-striped">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>

        </tr>
      </table>
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>

      <h2>New book</h2>
      <%= form_with model: @book_new, local:true do |f| %>
        <label for="book_title">title</label><br>
        <%= f.text_field :title %><br>
        <label for="book_body">Opinion</label><br>
        <%= f.text_area :body %><br>
 　　　　　<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <% end %>
   </div>

    <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
       <table class="table table-hover table-inverse">
          <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
          </tr>
           <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', fallback:"no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
              </td>
            <td><%= book.body %></td>
          </tr>
           <% end %>
       </table>
    </div>
  </div>
</div>
